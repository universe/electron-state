{
  "name": "electron-state",
  "version": "0.0.4",
  "description": "React-like IPC backed state objects for Electron.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc --b tsconfig.json",
    "test": "yarn lint && mocha test",
    "lint": "eslint **/*.ts",
    "lint:fix": "eslint **/*.ts --fix",
    "prepublishOnly": "yarn build && cp dist/src/* .",
    "postpublish": "rm -f ./index.* && rm -f ./hooks.* && rm -f ./decorators.*"
  },
  "author": "Adam Miller <adam@universe.app>",
  "license": "MIT",
  "files": [
    "!dist",
    "index.*",
    "hooks.*",
    "decorators.*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix",
      "pre-push": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/node": "12.7.5",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "electron": "^11.1.0",
    "eslint": "6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-preact": "^1.1.6",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.0.9",
    "react": "^17.0.1",
    "typescript": "^4.1.3",
    "watch": "^1.0.2"
  }
}
